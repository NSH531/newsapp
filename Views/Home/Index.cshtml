@section scripts {
    @Scripts.Render("~/bundles/news")
}
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">News</h2>

                <span data-bind="text: total">

                </span>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: news">
                    <li>
                        <small><a data-bind="attr:{href: url},text: title" target="_blank"></a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-dan@ger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>
</div>